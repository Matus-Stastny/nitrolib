{
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react",
    "prettier/flowtype",
    "plugin:flowtype/recommended",
    "plugin:fp/recommended"
  ],
  "plugins": [
    "prettier",
    "flowtype",
    "fp"
  ],
  "env": {
    "jest": true
  },
  "rules": {
    "prettier/prettier": "error",
    "flowtype/no-weak-types": [
      "error",
      {
        "any": false,
        "Object": true,
        "Function": true
      }
    ], // no Function, Object
    "fp/no-mutation": ["error",
      {
        "commonjs": true,
        "exceptions": [
          {"property": "defaultProps" }
        ]
      }
    ], // CommonJS and 'defaultProps' are OK
    "fp/no-nil": "off", // Side effects
    "fp/no-unused-expression": "off", // 'fs' calls, for example
    "react/default-props-match-prop-types": "off", // Flow/ESlint conflict
    "react/require-default-props": "off", // Somehow semantically wrong
    "jsx-a11y/anchor-is-valid": "off", // Relative paths bullshit
    "import/no-unresolved": "off", // Broken: https://github.com/tleunen/eslint-import-resolver-babel-module/issues/82
    "import/extensions": "off" // Broken: https://github.com/tleunen/eslint-import-resolver-babel-module/issues/82
  },
  "settings": {
//    "import/resolver": {
//      "babel-module": {}
//    }
  }
}
