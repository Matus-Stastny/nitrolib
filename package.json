{
  "name": "reactizer",
  "version": "0.0.0",
  "description": "The ultimate react boilerplate!",
  "main": "dist/server.js",
  "scripts": {
    "start": "npm run clean && npm run babel && run-p run webpack:dev",
    "run": "node dist/server",
    "render": "node dist/server/render",
    "bundle": "npm run clean && npm run babel && npm run webpack && npm run render",
    "babel": "babel src -d dist",
    "webpack": "webpack --config etc/webpack.build.js --mode production",
    "webpack:dev": "webpack-dev-server --config etc/webpack.dev.js --mode development --inline --hot",
    "public": "babel src/client/public -d public/lib",
    "test": "jest",
    "lint": "eslint '**/*.{js,jsx}'",
    "lint:fix": "eslint '**/*.{js,jsx}' --fix",
    "flow": "flow",
    "flow:check": "flow check",
    "clean": "rimraf .tmp dist"
  },
  "keywords": [
    "react",
    "webpack",
    "boilerplate"
  ],
  "author": "oreqizer",
  "license": "MIT",
  "dependencies": {
    "koa": "^2.5.0",
    "koa-logger": "^3.2.0",
    "koa-static": "^4.0.2",
    "node-polyglot": "^2.2.2",
    "prop-types": "^15.6.1",
    "ramda": "^0.25.0",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "react-router-dom": "^4.2.2",
    "reactizer-lib": "^0.0.0",
    "styled-components": "^3.2.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.44",
    "@babel/core": "^7.0.0-beta.44",
    "@babel/preset-env": "^7.0.0-beta.44",
    "@babel/preset-flow": "^7.0.0-beta.44",
    "@babel/preset-react": "^7.0.0-beta.44",
    "@babel/preset-stage-2": "^7.0.0-beta.44",
    "assets-webpack-plugin": "^3.5.1",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.3",
    "babel-loader": "8.0.0-beta.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-ramda": "^1.5.0",
    "babel-plugin-styled-components": "^1.5.1",
    "babel-preset-airbnb": "^2.4.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-import-resolver-babel-module": "^4.0.0",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "flow-bin": "^0.69.0",
    "i18n-webpack-plugin": "^1.0.0",
    "jest": "^22.4.3",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.11.1",
    "raf": "^3.4.0",
    "rimraf": "^2.6.2",
    "webpack": "^4.4.1",
    "webpack-cli": "^2.0.13",
    "webpack-dev-server": "^3.1.1"
  }
}
